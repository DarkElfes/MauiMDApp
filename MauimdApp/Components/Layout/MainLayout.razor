@using MauimdApp.Components.Layout.SidePanel;
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider IsDarkMode="true" Theme="@theme"/>
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


<MudLayout>
    <SidePanel />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    MudTheme theme = new()
    {
        PaletteDark = new()
        {
            Primary = "#00B96B",
            Secondary = "#ff4081",

            
            DrawerBackground = "#000000",
            Background = "#000000",

            Surface = "#0f1011",
        },
    };

}
