<MudExpansionPanel HeaderClass="px-4 py-2"
                   Gutters="false"
                   Dense="false">
    <TitleContent>
        <MudStack Row Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Center">
                @if (Language != null)
                {
                    <MudText Typo="Typo.subtitle2"
                             Color="Color.Dark">
                        @Language
                    </MudText>
                }
                @if (Title != null)
                {
                    <MudText Typo="Typo.caption">
                        @Title
                    </MudText>
                }
            </MudStack>
            @if (ShowCopyButton)
            {
                <MudButton>Copy</MudButton>
            }
        </MudStack>
    </TitleContent>
    <ChildContent>
        <pre class="language-@(Language)">
            <code class="@(ShowLineNumbers ? "line-numbers" : "")">
                @Code
            </code>
        </pre>
    </ChildContent>
</MudExpansionPanel>


@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Language { get; set; }
    [Parameter] public string? Code { get; set; }
    [Parameter] public bool ShowLineNumbers { get; set; } = true;
    [Parameter] public bool ShowCopyButton { get; set; } = true;
    [Parameter] public bool ShowCodeBlock { get; set; } = true;
}