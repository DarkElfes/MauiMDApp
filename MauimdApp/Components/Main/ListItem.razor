
<MudStack Row
          Justify="Justify.SpaceBetween"
          @oncontextmenu="OpenContextMenu">
    <MudText Typo="Typo.subtitle1">
        @Note.Name
    </MudText>
    @if (_isShowContextMenu)
    {
        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                       Color="Color.Error"
                       Size="Size.Small"
                       OnClick="Remove" />
    }
</MudStack>

@code {
    [Inject] public required INoteManager NoteManager { get; set; }
    [Inject] public required ISnackbar Snackbar { get; set; }

    [Parameter] public required Note Note { get; set; }

    private bool _isShowContextMenu;

    private async Task OpenContextMenu()
    {
        _isShowContextMenu = true;
        await Task.Delay(5000);
        _isShowContextMenu = false;
    }

    private void Remove()
    {
      

    }
}